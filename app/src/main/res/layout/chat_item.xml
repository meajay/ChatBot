<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="#efeded">

        <TextView
            android:id="@+id/send_text_message"
            android:layout_marginTop="8dp"
            android:background="@drawable/chat_send_message"
            android:layout_width="wrap_content"
            android:paddingTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="80dp"
            android:gravity="start"
            android:textSize="14dp"
            android:visibility="gone"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:text="Hey,whats are y riyght now waan chatc h "
            android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/receive_text_message"
        android:layout_marginTop="8dp"
        android:background="@drawable/chat_receive_message"
        android:layout_width="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="10dp"
        android:gravity="start"
        android:visibility="visible"
        android:textSize="14dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_alignParentStart="true"
        android:textColor="#616161"
        android:text="Hey,whats are youd ojh riyght now waan chatc h "
        android:layout_height="wrap_content" />


</RelativeLayout>